# vim: filetype=i3
# i3 config file (v4)

# #---Window Display---# #
for_window[class=".*"] border pixel 0
gaps inner 20
gaps outer 0
smart_borders on

# #---Basic Definitions---# #
set $mod Mod1
set $term --no-startup-id $TERMINAL
set $browser --no-startup-id $BROWSER
set $netrefresh --no-startup-id sudo -A systemctl restart NetworkManager

# #---Status Bar---# #
bar {
    i3bar_command i3bar -t
	font pango:mono 10
    status_command i3blocks
	position bottom
	mode dock
	modifier None
    separator_symbol "â”ƒ"
    colors {
        background         #00000080
        focused_workspace  #ffffff50 #00000040 #ffffff
		active_workspace   #00000001 #00000040 #000000
		inactive_workspace #00000001 #00000040 #ffffff
		urgent_workspace   #2f343a #900000 #ffffff
        separator          #ffffff50
    }
}

# #---Menus---# #
bindsym $mod+d exec --no-startup-id rofi -show run
bindsym $mod+grave exec --no-startup-id rofi_emoji
bindsym $mod+w exec --no-startup-id rofi -show window
bindsym $mod+s exec --no-startup-id rofi -show ssh

# #---Applications---# #
bindsym $mod+b exec --no-startup-id $BROWSER

# #---Volume---X X
bindsym XF86AudioRaiseVolume exec volume_up
bindsym XF86AudioLowerVolume exec volume_down
bindsym XF86AudioMute exec volume_toggle

# #---Screen Recording---# #
bindsym Print exec --no-startup-id maim pic-full-"$(date +%s%3N).png"
bindsym Shift+Print exec -no-startup-id maimpick

# #---Windows---# #
# New window
bindsym $mod+c split h exec $term
bindsym $mod+v split v exec $term

# Kill focused window
bindsym $mod+q kill

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# window resizing
bindsym $mod+minus resize shrink width 5 px or 5 ppt
bindsym $mod+equal resize grow width 5 px or 5 ppt
bindsym $mod+shift+minus resize shrink height 5 px or 5 ppt
bindsym $mod+shift+equal resize grow height 5 px or 5 ppt

# #---Workspaces---# #
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# #---i3 admin---# #
# restart i3 in place
bindsym $mod+Shift+r restart

# exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
