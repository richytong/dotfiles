<?xml version='1.0'?>
<!DOCTYPE fontconfig SYSTEM 'fonts.dtd'>
<fontconfig>

 <alias>
    <family>serif</family>
    <prefer><family>PxPlus IBM VGA8</family></prefer>
  </alias>
  <alias>
    <family>sans-serif</family>
    <prefer><family>PxPlus IBM VGA8</family></prefer>
  </alias>
  <alias>
    <family>sans</family>
    <prefer><family>PxPlus IBM VGA8</family></prefer>
  </alias>
  <alias>
    <family>monospace</family>
    <prefer><family>PxPlus IBM VGA8</family></prefer>
  </alias>

  <!-- This sets Symbola as the final fallback font for the monospace font family. -->
  <match target="pattern">
    <test name="family"><string>monospace</string></test>
    <edit name="family" mode="append"><string>Noto Color Emoji</string></edit>
  </match>

  <!-- Use bold terminus -->
  <!--
  <match target="font">
    <test name="family"><string>xos4 Terminus</string></test>
    <edit name="style" mode="assign"><string>Bold</string></edit>
    <edit name="embolden" mode="assign"><bool>true</string></edit>
  </match>
  -->

</fontconfig>

