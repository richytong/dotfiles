  -H "Content-Type: application/json" \
  -d @- <<HEREDOC
{
    "properties": {
        "groups": {
            "type": "nested",
            "properties": {
                "_id": {
                    "type": "keyword"
                }
            }
        }
    }
}
HEREDOC
