#!/bin/sh

declare find_type
while getopts "t:" o; do case "${o}" in
  t) find_type=${OPTARG} ;;
  *) printf "Invalid option -%s\\n" "$o" && exit ;;
esac done

shift $((OPTIND - 1))

dirs="$@"
[ -z "$dirs" ] && dirs=~/code

find_cmd="find -L $dirs"
[ "$find_type" == "f" ] || [ "$find_type" == "d" ] && find_cmd+=" -type $find_type"

$find_cmd \
  ! -path "*.git*" \
  ! -path "*.npm*" \
  ! -path "*node_modules*" \
  ! -path "*.cache*" \
  ! -path "*go/pkg*" \
  ! -path "*vendor*" \
  ! -path "*pkg*" \
  ! -path "/home/richard/lib*" \
  ! -path "/home/richard/code/node/*" \
  ! -path "/home/richard/code/dolphin-emu/*" \
  ! -path "/home/richard/code/git/*" \
  2>&1
