#!/bin/sh
# The real git s

dir="$1"
[ -z "$dir" ] && dir="$(pwd)"

pretty_dir="$(echo "$dir" | sed s:^$HOME:~:g)"

cur_branch="$(git branch | grep \* | cut -d ' ' -f2)"
cur_branch_tracking="$(git rev-parse --abbrev-ref "$cur_branch@{upstream}" 2>/dev/null)"

[ -z "$cur_branch_tracking" ] || cur_branch_comp="$(git-compare-count "$dir" "$cur_branch" "$cur_branch_tracking")"

RED='\033[0;31m'
BLUE='\033[0;34m'
GREEN='\033[0;32m'
NC='\033[0m'

out=""
out+="$BLUE$pretty_dir$NC"
out+=":"
out+="$GREEN$cur_branch$NC"
[ -z "$cur_branch_tracking" ] || out+="...$RED$cur_branch_tracking$NC"
[ -z "$cur_branch_comp" ] || out+=" [$cur_branch_comp]"

echo -e "$out"
git --git-dir="$dir/.git" --work-tree="$dir" status -s --column=row
